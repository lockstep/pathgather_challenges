<div>
  <% @courses.each do |course| %>
    <div class="form-group">
      <label>ID</label>
      <div class="form-control-static">
        <%= course.course_id %>
      </div>
      <hr />
    </div>

    <div class="form-group">
      <label>Name</label>
      <div class="form-control-static">
        <%= course.name %>
      </div>
      <hr />
    </div>

    <div class="form-group">
      <label>Description</label>
      <div class="form-control-static">
        <%= course.description %>
      </div>
      <hr />
    </div>

    <div class="form-group">
      <label>Start Date</label>
      <div class="form-control-static">
        <%= course.start_date %>
      </div>
      <hr />
    </div>

    <div class="form-group">
      <label>URL</label>
      <div class="form-control-static">
        <%= link_to course.url, course.url, target: '_blank' %>
      </div>
      <hr />
    </div>
  <% end %>
</div>
